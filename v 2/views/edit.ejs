<% include partials/header %>

<div class="ui container">
	<div style="margin: 45px 185px;">
		<div class="ui segment">
			<div class= "small-container">
				<form action='/blogs/<%= post._id %>?_method=PUT' method='POST'>
					<h3 style="margin-bottom: 15px; margin-top: 0px; font-size: 30px;">Edit Post</h3>

					<strong><label>Title</label></strong><br>
					<div class="ui fluid icon input"><input type="text" name="blogTitle" style="margin-bottom: 10px; width:100%; height: 22px;"></input></div><br>

					<strong><label>Post Content</label></strong><br>
					<div class="ui fluid icon input"><input type="text" name="blogContent" style="margin-bottom: 10px; width:100%; height: 110px;"></input></div><br>

					<button class="ui button huge basic violet">Submit</button>
				</form>
			</div>
		</div>
	</div>
</div>

<script>
	var inputs = document.querySelectorAll('input');
	inputs[0].value = "<%= post.name %>";
	inputs[1].value = "<%= post.content %>";
</script>


<% include partials/footer %>