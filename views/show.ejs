<% include partials/header %>

<div class="content">
	<h3 style="margin-top: 30px; font-size: 25px;"> <%= post.name %> </h3>
	<div class="bordering">
		<div class= "small-container">
			<img src="<%= post.image %>" style="float: none; width: 100%; height: 300px;">
			<p style="margin: 0px;"> <%= post.date %> </p>
			<p style="margin-top: 0px;"> <%= post.content %> </p>
			<button style="font-size: 18px; border: 1px solid orange; background-color:white; color: orange;"><a href="/blogs/<%= post._id %>/edit" style="color: orange;">Update Blog</a></button>
			<button style="font-size: 18px; border: 1px solid red;"><a href="/blogs/<%= post._id %>" style="color:red;" >Delete Blog</a></button>
		</div>
	</div>
</div>

<% include partials/footer %>